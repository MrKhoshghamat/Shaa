<script src="/js/custom/authentication/sign-in/general.js"></script>
<partial name="_JQueryValidation"/>
<script src="/common/sweetalert/sweetalert.js"></script>
<partial name="_Notification"/>
<!--end::Page custom Javascript-->
<!--end::Javascript-->
</body>
<!--end::Body-->
</html>